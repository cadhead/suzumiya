html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= page.title
    each css in page.css
      link(rel="stylesheet", href=css)
  body
    header.page-header
      h1.sr-only=page.title
      block header

    .notices
      block notices

    .page-content
      block content

    footer.page-footer
      block footer

    .modal
      block modal

    block scripts
      each js in page.js
        script(src=js)
